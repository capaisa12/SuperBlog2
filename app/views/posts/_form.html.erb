<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1><%= form_title %></h1>
      <%= form_for @post do |f| %>
        <div class="form-group">
          <%= f.text_field :title, class: "form-control input-lg", placeholder: "Titulo del Post" %>
        </div>
        <div class="form-group">
          <%= f.text_area :content, class: "form-control input-lg", placeholder: "Ingresa aqui el Post" %>
        </div>
        <div class="form-group">
          <%= f.email_field :email, class: "form-control input-lg", placeholder: "Correo" %>
        </div>
        <div>
          <%= f.submit form_title, class:"btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
